# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type File {
  id: ID!
  name: String!
  slug: String!
  url: String!
  folderId: Int!
  folder: Folder!
  createdAt: Int!
  updatedAt: Int!
  groups(first: Int!, after: Int, filter: GroupFilter, sort: GroupSort): GroupConnection!
}

input CreateFile {
  name: String!
  slug: String!
  url: String!
  folderId: ID!       # The folder to which the file belongs
}

input UpdateFile {
  id: ID!
  name: String!
  slug: String!
  url: String!
}

# Filters for Files
input FileFilter {
  name: String
  slug: String
}

# Sorting for Files
input FileSort {
  field: FileSortField!
  order: SortOrder!
}

enum FileSortField {
  NAME
  SLUG
}


type FileConnection {
  totalCount: Int!
  edges: [FileEdge!]!
  pageInfo: PageInfo!
}

type FileEdge {
  cursor: String!
  node: File!
}

extend type Query {
  files(
    first: Int!
    after: Int
    filter: FileFilter
    sort: FileSort
  ): FileConnection!
  getFile(id: ID!): File!  # Get a single file by its ID
  getFilesByFolder(folderId: ID!): [File!]!  # Get files by folder ID
}

extend type Mutation {
  createFile(input: CreateFile!): File!
  updateFile(input: UpdateFile!): File!
  deleteFile(id: ID!): Boolean!
}
